{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "isolatedModules": true,
    "types": [
      "react",
      "expo-router"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/src/*": [
        "src/*"
      ],
      "@/src/lib/*": [
        "src/lib/*"
      ]
    }
  },
  "include": [
    "src",
    "app",
    "App.tsx",
    ".expo/types",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "server"
  ],
  "extends": "expo/tsconfig.base"
}
